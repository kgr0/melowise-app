<CustLabel2@ButtonBehavior+Label>:
    color: .09, .27, .368, 1
    size_hint_x: .8
    font_size: 16

<CustRadioButton@CheckBox>:
    color: [.788, .521, .517]
    group: "custom_radios"
    size_hint_x: .2
    allow_no_selection: False

<LabelRadioButton2@BoxLayout>:
    text: ''
    state: 'normal'
    description: ''
    CustRadioButton:
        id: rb
        state: root.state
        #on_state: app.root.current_screen.select_chords(self, self.state == 'down', root.text)
    
    CustLabel2:
        on_press: rb._do_press()
        text: root.text
    # Label:
    #     text: root.description
    #     font_size: 16
    #     color: colors.SECONDARY_DARK_RGBA

<ChordSettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Back'
            on_release: root.back_to_home()
            background_normal: ''
            color: colors.DARK_RGBA
            background_color: colors.MAIN_RGBA
            opacity: 1 if self.state == 'normal' else .5
            size_hint_y: 0.1
        Button:
            text: ''
            on_release: root.show_instruction()
            background_normal: ''
            color: colors.DARK_RGBA
            background_color: colors.LIGHT_RGBA
            opacity: 1 if self.state == 'normal' else .5
            size_hint_y: 0.1
            BoxLayout:
                #pos: self.parent.pos
                x: self.parent.x + (self.parent.width/2 - self.width/2)
                y: self.parent.y + (self.parent.height/2 - self.height/2)
                #size: self.parent.size
                orientation: 'horizontal'
                Image:
                    source: '././assets/instruction.png'
                    size_hint_x: None
                    width: 30
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                Label:
                    size_hint_x: None
                    #width: 100
                    font_size: 20
                    text: "Instruction"
                    color: colors.SECONDARY_DARK_RGBA
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        BoxLayout:
            orientation: 'vertical'
            padding_y: 20
            BoxLayout:
                orientation: 'vertical'
                LabelRadioButton2:
                    id: Beginner
                    text:"Beginner Level"
                    description: "Major Triad\nMinor Triad\nDiminished Triad\nAugmented Triad"
                    active: True
                LabelRadioButton2:
                    id: Intermediate
                    text:"Intermediate Level"
                    description: "Major Triad\nMinor Triad\nDiminished Triad\nAugmented Triad"
                LabelRadioButton2:
                    id: Advanced
                    text:"Advanced Level"
                    description: "Major Triad\nMinor Triad\nDiminished Triad\nAugmented Triad"
        Button:
            text: 'Start'
            on_release: root.go_to_exercise()
            color: colors.WHITE_RGBA
            background_normal: ''
            background_color: colors.SECONDARY_RGBA
            opacity: 1 if self.state == 'normal' else .5
            size_hint_y: 0.2
            font_size: 24
            bold: True