# statistics.kv

<StatisticsScreen>:
    canvas.before:
        Color:
            rgba: (.788, .521, .517,1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Statistics'
            font_size: 50
            font_name: 'Cambria'
            color: 1, 1, 1
            size_hint_y: .1
            bold: True
        BoxLayout:
            size_hint_y: .9
            orientation: 'vertical'
            BoxLayout:
                size_hint_y: .2
                Label:
                    text: 'Interval'
                    font_size: 40
                    font_name: 'Cambria'
                    color: 1, 1, 1
                    bold: True
            BoxLayout:
                id: pie_chart_container
                size_hint_y: .8
                pos_hint: {"top":1}
            ScrollView:
                do_scroll_x: True
                do_scroll_y: False
                
                BoxLayout:
                    id: bars_chart_container
                    size_hint: None, 1
                    width: 1000
                    height: 300
            Button:
                size_hint_y: .1
                text: 'Back'
                on_release: root.back_to_home()
                background_normal: ''
                background_color: colors.MAIN_RGBA
                color: colors.DARK_RGBA
                opacity: 1 if self.state == 'normal' else .5
