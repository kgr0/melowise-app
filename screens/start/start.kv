#:import colors colors

<StartScreen>:
    canvas.before:
        Color:
            rgb: colors.MAIN_RGBA
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: '././assets/logo.png'
            size_hint_x: None
            width: 150
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        Label:
            text: 'melowise'
            color:colors.LOGO_RGBA
            font_size: 30
            size_hint_y: 0.7
            font_name: 'Cambria'