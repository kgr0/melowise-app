<CustLabel@ButtonBehavior+Label>:
    color: .09, .27, .368, 1
    size_hint_x: .80
    font_size: 28
    font_name: 'Cambria'
<CustCheckBox@CheckBox>:
    color:.788, .521, .517
    color: colors.SECONDARY_RGBA
    size_hint_x: .20
<LabelCheckBox@BoxLayout>:
    text: ''
    active: True
    CustCheckBox:
        id: cb
        active: root.active
        on_active: app.root.current_screen.select_intervals(self, self.active, root.text)

    CustLabel:
        on_press: cb._do_press()
        text: root.text

<IntervalSettingsScreen>:
    # canvas.before:
    #     Color:
    #         rgba: 1, 1, 1, 1
    #     Rectangle:
    #         pos: self.pos
    #         size: self.size
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Back'
            on_release: root.back_to_home()
            background_normal: ''
            color: colors.DARK_RGBA
            background_color: colors.MAIN_RGBA
            opacity: 1 if self.state == 'normal' else .5
            size_hint_y: 0.1
        Button:
            text: ''
            on_release: root.show_instruction()
            background_normal: ''
            color: colors.DARK_RGBA
            background_color: colors.LIGHT_RGBA
            opacity: 1 if self.state == 'normal' else .5
            size_hint_y: 0.1
            BoxLayout:
                #pos: self.parent.pos
                x: self.parent.x + (self.parent.width/2 - self.width/2)
                y: self.parent.y + (self.parent.height/2 - self.height/2)
                #size: self.parent.size
                orientation: 'horizontal'
                # Image:
                #     source: '././assets/instruction.png'
                #     size_hint_x: None
                #     width: 30
                #     pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                Label:
                    size_hint_x: None
                    #width: 100
                    font_size: 35
                    font_name: 'Cambria'
                    text: "Instruction"
                    color: colors.SECONDARY_DARK_RGBA
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        BoxLayout:
            orientation: 'vertical'
            padding_y: 20
            LabelCheckBox:
                id: Select_all
                text:"Select/Unselect all"
                size_hint_y: 0.2
            GridLayout:
                cols: 2
                rows: 7
                LabelCheckBox:
                    id: Unison
                    text:"Unison"
                LabelCheckBox:
                    id: Minor second
                    text:"Minor second"
                LabelCheckBox:
                    id: Major second
                    text:"Major second"
                LabelCheckBox:
                    id: Minor third
                    text:"Minor third"
                LabelCheckBox:
                    id: Major third
                    text:"Major third"
                LabelCheckBox:
                    id: Perfect fourth
                    text:"Perfect fourth"
                LabelCheckBox:
                    id: Augmented fourth
                    text:"Augmented fourth"
                LabelCheckBox:
                    id: Diminished fifth
                    text:"Diminished fifth"
                LabelCheckBox:
                    id: Perfect fifth
                    text:"Perfect fifth"
                LabelCheckBox:
                    id: Minor sixth
                    text:"Minor sixth"
                LabelCheckBox:
                    id: Major sixth
                    text:"Major sixth"
                LabelCheckBox:
                    id: Minor seventh
                    text:"Minor seventh"
                LabelCheckBox:
                    id: Major seventh
                    text:"Major seventh"
                LabelCheckBox:
                    id: Octave
                    text:"Octave"
        Button:
            text: 'Start'
            on_release: root.go_to_exercise()
            color: colors.WHITE_RGBA
            background_normal: ''
            background_color: colors.SECONDARY_RGBA
            opacity: 1 if self.state == 'normal' else .5
            size_hint_y: 0.2
            font_size: 125
            font_name: 'Cambria'
            bold: True