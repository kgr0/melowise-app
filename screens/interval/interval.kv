<IntervalScreen>:
    StackLayout:
        Button:
            text: 'Back'
            on_release: root.back_to_home()
            background_normal: ''
            background_color: colors.MAIN_RGBA
            color: colors.DARK_RGBA
            opacity: 1 if self.state == 'normal' else .5
            size_hint_y: 0.1
        Button:
            on_release: root.play_sound()
            size: '50dp', '50dp'
            size_hint_y: 0.5
            pos_hint: {'center_x': 0.5}
            background_normal: ''
            background_color: colors.LIGHT_RGBA
            opacity: 1 if self.state == 'normal' else .5
            
            # anchor_x: 'center'
            # anchor_y: 'center'
            Image:
                source: '././assets/sound.png'
                width: 300
                # anchor_x: 'center'
                # anchor_y: 'center'
                x: self.parent.x + (self.parent.width/2 - self.width/2)
                y: self.parent.y + self.parent.height - 200
        BoxLayout:
            orientation: 'vertical'
            # Label:
            #     text: "Loading question..."
            #     font_size: 30
            #     color: colors.MAIN_RGBA
            #     opacity: 1 if root.answers == [] else 0  # Show the label only when the answers haven't been loaded yet
            StackLayout:
                #orientation: 'vertical'
                opacity: 0 if root.answers == [] else 1  # Hide the buttons until the answers are loaded
                Button:
                    id: answer_1
                    text: root.answer_1
                    size_hint_y: 0.1
                    #height: '48dp'
                    on_release: root.submit_answer(root.answers[0])
                    background_normal: ''
                    background_color: colors.MAIN_RGBA
                    color: colors.DARK_RGBA
                    opacity: 1 if self.state == 'normal' else .5
                Button:
                    id: answer_2
                    text: root.answer_2
                    size_hint_y: 0.1
                    #height: '48dp'
                    on_release: root.submit_answer(root.answers[1]) 
                    background_normal: ''
                    background_color: colors.MAIN_RGBA
                    color: colors.DARK_RGBA
                    opacity: 1 if self.state == 'normal' else .5
                Button:
                    id: answer_3
                    text: root.answer_3
                    size_hint_y: 0.1
                    #height: '48dp'
                    on_release: root.submit_answer(root.answers[2]) 
                    background_normal: ''
                    background_color: colors.MAIN_RGBA
                    color: colors.DARK_RGBA
                    opacity: 1 if self.state == 'normal' else .5
                Button:
                    id: answer_4
                    text: root.answer_4
                    size_hint_y: 0.1
                    #height: '48dp'
                    on_release: root.submit_answer(root.answers[3])
                    background_normal: ''
                    background_color: colors.MAIN_RGBA
                    color: colors.DARK_RGBA
                    opacity: 1 if self.state == 'normal' else .5